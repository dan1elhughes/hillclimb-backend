{
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true
		}
	},
	"env": {
		"node": true,
		"es6": true
	},
	"plugins": ["prettier"],
	"extends": ["eslint:recommended", "prettier"],
	"rules": {
		"prettier/prettier": "warn",
		"no-console": "off",
		"linebreak-style": ["error", "unix"]
	}
}
